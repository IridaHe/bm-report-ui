// 全局方法
$get_asset(path, ext = '.png')
  return '../assets/' + path + ext

$icon(path, ext = '.png')
  display: inline-block
  vertical-align: middle
  background: url($get_asset(path, ext)) center no-repeat
  background-size: contain

$reset()
  margin: 0
  padding: 0

$reset_ctrl()
  $reset()
  font-size: inherit
  font-weight: inherit
  color: inherit
  border: none
  line-height: inherit
  background-color: transparent
  appearance: none
  textarea&
    width: 100%
  &::placeholder
    color: $color_t3

$reset_ul()
  $reset()
  list-style: none

// 全局Reset
[class|="bmui"]
  margin: 0
  padding: 0
  font-style: inherit
  font-size: inherit
  font-weight: inherit
  color: inherit
  line-height: inherit
  &, &:before, &:after
    box-sizing: border-box
  ul&, li&
    list-style: none
  input&, textarea&
    appearance: none
    border: none
    background-color: transparent
    &::placeholder
      color: $color_t3
