$get_asset(path, ext = '.png')
  return '../assets/' + path + ext
$box_sizing()
  *, *:before, *:after
    box-sizing: border-box

$icon(path, ext = '.png')
  display: inline-block
  vertical-align: middle
  background: url($get_asset(path)) center no-repeat
  background-size: contain