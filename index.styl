$color_theme1 = #0a85cc
$color_theme2 = #1fb8ff

$color_text1 = #333
$color_text2 = #666
$color_text3 = #999

.bma_empty
  position absolute
  left 0
  bottom 50%
  width 100%
  text-align center
  color #b3b3b3
  font-size 16px
  &-img
    display block
    width 174px
    height 115px
    margin-left auto
    margin-right auto
    background url("./assets/empty.png") center no-repeat
    background-size contain
    margin-bottom 14px
  &-link
    display block
    font-size 14px
    color $color_theme1
    text-decoration underline
    margin-top 10px

.bma_loading
  position absolute
  left 0
  top 0
  width 100%
  height 2px
  overflow hidden
  &-rate
    background-color $color_theme1
    display block
    height 100%
    width 0
    transition width 10s cubic-bezier(0, 0.5, 0, 1)
.bma_search
  display flex
  align-items center
  margin 6px 10px
  padding 2px 6px
  position relative
  &-input
    min-width 0
    height 30px
    padding-left 30px
    background url("./assets/search_blue.svg") left no-repeat
    background-size contain
    flex-grow 1
    color $color_text1
    border none
  &-submit, &-reset
    margin-left 8px
    color $color_theme2
    flex-shrink 0
    background none
    border none
    display none
  &-submit
    ~/-input:not(:invalid) ~ &
      display block
  &-reset
    ~/-input:focus:invalid ~ &
      display block
  &-line
    position absolute
    left 0
    width 100%
    bottom 0
    height 1px
    background-color $color_text3
    ~/-input:focus ~ &
    ~/-input:not(:invalid) ~ &
      background-color: $color_theme2
  &-empty
    display block
    text-align center
    margin-top 44px
    background url("./assets/empty@3x.png") top no-repeat
    background-size 120px
    padding-top 128px
    color $color_text3
    font-size 14px
    font-style inherit